<resources>

    <!-- Base application theme. -->
    <style name="BeerometerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="Widget.PrimaryTextView" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="Widget.SecondaryTextView" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:alpha">.54</item>
        <item name="android:singleLine">true</item>
    </style>


</resources>
